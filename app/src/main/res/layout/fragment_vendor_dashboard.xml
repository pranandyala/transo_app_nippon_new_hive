<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipedashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="?android:attr/selectableItemBackground">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_50"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/vendor_vehicle_assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp"
                app:cardForegroundColor="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/vendor_vehicle_assign_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/app_button_selector"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="15dp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vendor_vehicle_assign_icon"
                        style="@style/ImageViewStyle2"
                        android:background="@drawable/ic_vector_booking_form" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/head1"
                        style="@style/TextViewStyle5"
                        android:text="Assign Vehicle" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vendor_status_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp"
                app:cardForegroundColor="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/vendor_status_update_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/app_button_selector"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="15dp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vendor_status_update_icon"
                        style="@style/ImageViewStyle2"
                        android:background="@drawable/ic_vector_upload_document" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/head2"
                        style="@style/TextViewStyle5"
                        android:text="Status Update" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/liveCount"
                        style="@style/TextViewStyle4"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vendor_pod_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp"
                app:cardForegroundColor="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/pod_upload_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/app_button_selector"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="15dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vendor_pod_upload_icon"
                        style="@style/ImageViewStyle2"
                        android:background="@drawable/ic_vector_delivery_truck" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/head3"
                        style="@style/TextViewStyle5"
                        android:text="POD Upload" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vendor_pod_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp"
                app:cardForegroundColor="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/vendor_pod_download_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/app_button_selector"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="15dp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vendor_pod_download_icon"
                        style="@style/ImageViewStyle2"
                        android:background="@drawable/ic_vector_routing_grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/head4"
                        style="@style/TextViewStyle5"
                        android:text="Download POD" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pendingCount"
                        style="@style/TextViewStyle4"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vendor_on_board_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp"
                app:cardForegroundColor="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/vendor_on_board_vehicle_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/app_button_selector"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="15dp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vendor_on_board_vehicle_icon"
                        style="@style/ImageViewStyle2"
                        android:background="@drawable/ic_vector_routing_grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/head5"
                        style="@style/TextViewStyle5"
                        android:text="On Board Vehicle" />
                    <!--
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/pendingCount"
                                            style="@style/TextViewStyle4"
                                            android:layout_width="wrap_content"
                                            android:layout_gravity="center_vertical|center_horizontal"
                                            android:textColor="@color/black"
                                            android:textSize="25sp" />-->

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>